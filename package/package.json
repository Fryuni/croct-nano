{
    "name": "croct-nanostores",
    "version": "1.1.0",
    "type": "module",
    "description": "Nanostores bindings for Croct content.",
    "keywords": [
        "nanostores",
        "state-management",
        "croct",
        "personalization",
        "typescript",
        "react",
        "preact",
        "vue",
        "solid-js",
        "svelte"
    ],
    "homepage": "https://github.com/Fryuni/croct-nano",
    "bugs": {
        "url": "https://github.com/Fryuni/croct-nano/issues"
    },
    "repository": "https://github.com/Fryuni/croct-nano",
    "license": "MIT",
    "author": {
        "name": "Luiz Ferraz",
        "email": "luiz+lib-croct-nano@lferraz.com",
        "url": "https://github.com/Fryuni/croct-nano"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "README.md",
        "dist",
        "src"
    ],
    "scripts": {
        "build": "bun run build.ts",
        "dev": "bun --watch run build.ts",
        "prepack": "bun run build && cp ../README.md .",
        "size": "rm -f esbuild-why*.html && bunx size-limit",
        "test": "bun test --coverage",
        "test:dev": "bun test --watch"
    },
    "dependencies": {
        "@croct/json": "^2.1.0",
        "@inox-tools/utils": "^1.0.0",
        "@nanostores/persistent": "^1.3.3",
        "nanostores": "^1.1.0"
    },
    "devDependencies": {
        "@size-limit/esbuild-why": "^12.0.0",
        "@size-limit/preset-small-lib": "^12.0.0",
        "@types/node": "^25.2.3",
        "jest-extended": "^7.0.0",
        "size-limit": "^12.0.0",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "@croct/plug": ">=0.21.0 <0.22.0",
        "@nanostores/preact": "^1.0.0",
        "@nanostores/react": "^1.0.0",
        "@nanostores/solid": "^1.1.1",
        "@nanostores/vue": "^1.0.1"
    },
    "peerDependenciesMeta": {
        "@nanostores/preact": {
            "optional": true
        },
        "@nanostores/react": {
            "optional": true
        },
        "@nanostores/solid": {
            "optional": true
        },
        "@nanostores/vue": {
            "optional": true
        }
    }
}
