{
    "name": "root",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "packageManager": "bun@1.3.9",
    "license": "MIT",
    "author": {
        "name": "Luiz Ferraz",
        "email": "luiz+lib-croct-nano@lferraz.com",
        "url": "https://github.com/Fryuni/croct-nano"
    },
    "workspaces": [
        "docs",
        "package",
        "examples/*",
        "package/*/tests/fixture/*",
        "package/*/e2e/fixture/*"
    ],
    "scripts": {
        "build": "turbo run --filter croct-nanostores build",
        "dev": "turbo run --filter croct-nanostores dev",
        "docs:build": "turbo run --filter docs build",
        "docs:dev": "turbo run --filter docs dev",
        "format": "prettier -w \"**/*\" --ignore-unknown --cache",
        "test": "turbo run --concurrency=1 --filter croct-nanostores test",
        "version": "changeset version && bun install && bun run format",
        "cut-release": "bun run build && changeset publish"
    },
    "dependencies": {
        "@changesets/changelog-github": "^0.5.2",
        "@changesets/cli": "^2.29.8",
        "@inox-tools/utils": "^1.0.0",
        "@types/bun": "^1.3.9",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "turbo": "^2.8.3",
        "typescript": "^5.9.3"
    },
    "patchedDependencies": {
        "astro-live-code@0.0.6": "patches/astro-live-code@0.0.6.patch"
    }
}
